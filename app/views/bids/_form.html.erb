<%= form_for @bid do |f| %>

	<% if @bid.errors.any? %>
		<div id="error_explanation">
			<h3><%= pluralize(@bid.errors.count, "error") %> prevented this bid from being saved:</h3>
			<ul><% @bid.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

<h3><%= @bid.auction.title %></h3>
<h3>Listed for $<%= @bid.auction.buy_now_price %> (<%= @bid.auction.percent_off %>%)</h3>
<img src=<%= @bid.auction.image %> width="250" class="img-polaroid" />



  <div class="control-group">
    <%= f.label "My bid ($)", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :value, :class => 'text_field' %>
    </div>
  </div>

	<%= f.number_field :auction_id, :value => params[:auction_id], :type => 'hidden' %>
	<%= f.number_field :user_id, :value => params[:user_id], :type => 'hidden' %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                bids_path, :class => 'btn' %>
  </div>
<% end %>
