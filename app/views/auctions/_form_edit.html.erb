
<%= form_for @auction, :html => { :class => 'form-horizontal' } do |f| %>

<div class="row">
<div class="span7">

  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field span4' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :brand, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :brand, :class => 'text_field span4' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label "Description - include great keywords for shoppers!", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area 	:description, :class => 'text_field span4', :rows => 6 %>
    </div>
  </div>

  <div class="control-group">
  	<%= f.label :category, :class => 'control-label' %>
  	<div class="controls">
  <%= f.collection_select :category, 
  				%w[appliances arts,_crafts,_and_sewing automotive beauty baby books cell_phones_and_Accessories
  					clothing_and_accessories collectibles electronics gift_cards grocery health
  					home_and_kitchen jewelry music office_products lawn_and_garden pets shoes 
  					sports_and_outdoors tools_and_home_improvement toys_and_games video_games watches],
  				:to_s, :humanize, :value => current_user.category %>
  	</div>
  </div>
  <div class="control-group">
    <%= f.label 'Price ($)', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :buy_now_price, :class => 'number_field' %><p style="display:inline;"> Required</p>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'Percent off (%)', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :percent_off, :class => 'number_field' %><p style="display:inline;"> Recommended</p>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :size, :class => 'control-label muted' %> 
    <div class="controls">
      <%= f.text_field :size, :class => 'text_field' %><p class="muted" style="display:inline;"> Optional</p>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :color, :class => 'control-label muted' %>
    <div class="controls">
      <%= f.text_field :color, :class => 'text_field' %><p class="muted" style="display:inline;"> Optional</p>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :condition, :class => 'control-label muted' %>
    <div class="controls">
      <%= f.text_field :condition, :class => 'text_field' %><p class="muted" style="display:inline;"> Optional</p>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :lowest_accepted_price, :class => 'control-label muted' %>
    <div class="controls">
      <%= f.text_field :lowest_accepted_price, :class => 'text_field' %><p class="muted" style="display:inline;"> Optional</p>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :quantity, :class => 'control-label muted' %>
    <div class="controls">
      <%= f.number_field :quantity, :class => 'number_field' %><p class="muted" style="display:inline;"> Optional</p>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                auctions_path, :class => 'btn' %>
  </div>

</div> <!-- end span7 -->

<div class="span3">
	<img src="<%=@auction.image %>" class="img-polaroid" />
</div> <!-- end span3 -->

</div> <!-- end row -->
<% end %>
