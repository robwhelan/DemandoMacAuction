<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' } ) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group">
  	<%= f.label :role, :class => 'control-label' %>
  	<div class="controls">
  		<%= f.collection_select :role, %w[buyer seller], :to_s, :humanize %>
  	</div>
  </div>	
  
  <div class="control-group">
  	<%= f.label "Store name", :class => 'control-label' %>
  	<div class="controls">
  		<%= f.text_field :user_name, :placeholder => "example: John's Widgets" %><p class="muted" style="display:inline;"> Only needed for sellers</p>
  	</div>
  </div>
  
  <div class="control-group">
  	<%= f.label "My store sells:", :class=> 'control-label' %>
 	<div class="controls">
  		<%= f.collection_select :category, 
  				%w[ (n/a) appliances arts_and_crafts automotive beauty baby books cell_phones_and_Accessories
  					clothing_and_accessories collectibles electronics gift_cards grocery health
  					home_and_kitchen jewelry music office_products lawn_and_garden pets shoes 
  					sports_and_outdoors tools_and_home_improvement toys_and_games video_games watches],
  				:to_s, :humanize %><p class="muted" style="display:inline;"> Only needed for sellers</p>
  	</div>
  </div>

  <div class="control-group">
  	<%= f.label "How'd you hear about us?", :class => 'control-label' %>
  	<div class="controls">
  		<%= f.text_field :referral, :placeholder => "Type your friend's name here" %><p style="display:inline;"> Get a $20 coupon for every four friends you get to sign up!</p>
  	</div>
  </div>

  <div class="control-group">
  	<%= f.label "Login email", :class => 'control-label' %>
  	<div class="controls">
  		<%= f.text_field :email %>
  	</div>
  </div>

  <div class="control-group">
  	<%= f.label :password, :class => 'control-label' %>
  	<div class="controls">
  		<%= f.password_field :password %>
  	</div>
  </div>

  <div class="control-group">
  	<%= f.label :password_confirmation, :class => 'control-label' %>
  	<div class="controls">
  		<%= f.password_field :password_confirmation %>
  	</div>
  </div>

  <div class="control-group">
  	<%= f.label "First name", :class => 'control-label' %>
  	<div class="controls">
  		<%= f.text_field :first_name %>
  	</div>
  </div>

  <div class="control-group">
  	<%= f.label "Last name", :class => 'control-label' %>
  	<div class="controls">
  		<%= f.text_field :last_name %>
  	</div>
  </div>

  <div class="control-group">
  	<%= f.label "Address Line 1", :class => 'control-label' %>
  	<div class="controls">
  		<%= f.text_field :address_line1 %><p class="muted" style="display:inline;"> Sellers, put the physical location of your store</p>
  	</div>
  </div>

  <div class="control-group">
  	<%= f.label "Address Line 2", :class => 'control-label' %>
  	<div class="controls">
  		<%= f.text_field :address_line2 %>
  	</div>
  </div>

  <div class="control-group">
  	<%= f.label :city, :class => 'control-label' %>
  	<div class="controls">
  		<%= f.text_field :city, :value => 'Charleston' %>
  	</div>
  </div>

  <div class="control-group">
  	<%= f.label :state, :class => 'control-label' %>
  	<div class="controls">
  		<%= f.text_field :state, :value => 'SC' %>
  	</div>
  </div>

  <div class="control-group">
  	<%= f.label :zip, :class => 'control-label' %>
  	<div class="controls">
  		<%= f.text_field :zip %>
  	</div>
  </div>

  <div class="control-group">
  	<%= f.label :phone, :class => 'control-label' %>
  	<div class="controls">
  		<%= f.text_field :phone, :placeholder => 'example: (843) 555-4444' %>
  	</div>
  </div>

  <div class="control-group">
	<div class="controls">
		<%= f.submit "Sign up" %>
	</div>
  </div>
  
<% end %>

<%= render "devise/shared/links" %>
