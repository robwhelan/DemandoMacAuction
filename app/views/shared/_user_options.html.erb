
<% if current_user.role == "admin" %>
  <li>
    <%= link_to "All Sales", auctions_path %>
  </li>
  <li>
    <%= link_to "All Bids", bids_path %>
  </li>
<% end %>

<% if current_user.role == "seller" %>

<div class="btn-group pull-left">
  <button class="btn dropdown-toggle" style="margin-top: 14px;" data-toggle="dropdown">
  	Hello, <%= current_user.user_name %>
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
	<li><%= link_to "My Account", edit_user_registration_path, :tabindex => '-1' %></li>
	<li><%= link_to "My Sales", auctions_path(:auction_owner => current_user.id), :tabindex => '-1' %></li>
	<li><%= link_to "All Sales", auctions_path, :tabindex => '-1' %></li>
	<li class="divider"></li>
	<li><%= link_to "Logout", destroy_user_session_path, :method => :delete, :tabindex => '-1' %></li>
  </ul>
</div>

<% end %>

<% if current_user.role == "buyer" %>
<div class="btn-group pull-left">
  <button class="btn dropdown-toggle" style="margin-top: 14px;" data-toggle="dropdown">
  	Hello, <%= current_user.user_name %>
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
	<li><%= link_to "My Account", edit_user_registration_path, :tabindex => '-1' %></li>
	<li><%= link_to "My Bids", bids_path, :tabindex => '-1' %></li>
	<li><%= link_to "All Sales", auctions_path, :tabindex => '-1' %></li>
	<li class="divider"></li>
	<li><%= link_to "Logout", destroy_user_session_path, :method => :delete, :tabindex => '-1' %></li>
  </ul>
</div>
<% end %>