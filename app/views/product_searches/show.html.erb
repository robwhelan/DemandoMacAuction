<%- model_class = ProductSearch -%>
<div class="progress progress-striped active">
  <div class="bar" style="width: 33%;"></div>
</div>
<div class="page-header">
  <h1>Choose a <%=t '.title', :default => model_class.model_name.human %></h1>
</div>

	<ul class="thumbnails">
	    <% @results.each do |source| %>
			<li class="span2">
				<%= link_to new_auction_path(source) do %>
					<div class="thumbnail">
						<img src=<%=source[:image] %> alt="" />
						<p><%=source[:title] %></p>
					</div>
				<% end %>
			</li>
		<% end %>	
	</ul>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              product_searches_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_product_search_path(@product_search), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              product_search_path(@product_search),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
